@using GarmentsShop.Models.Users
@model LoginModel

@{
    Layout = "~/Views/Shared/_MainLayoutView.cshtml";
    ViewBag.Title = "Login Page";
}

@section mystyles{
    <!-- This line of text is written in mystyles section  -->
}

@section myscript{
    <!-- section for JavaScript  -->
}


@*<div class="container-fluid" >
    @Html.Partial("~/Views/Shared/_PartialView1.cshtml")
</div>*@

<div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-primary" data-hideanim="slide">
        <div class="panel-heading">Login / Sign Up</div>
        <div class="panel-body">
            <div id="loginpanel">

                @*@Html.ActionLink("Sign Up", "signup","users",new { style = "color:#ff0000", title = "signup link" })*@

                @using (Html.BeginForm("login", "users", FormMethod.Post, new { id = "loginform" }))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", placeholder = "Login Id", required = "required" })
                            <span class="form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "required" })
                            <span class="form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                    </div>
                    <div class="form-group">
                        <div>
                            @Html.CheckBoxFor(m => m.RememberMe) Remember Me
                        </div>
                        @*@Html.Partial("~/Views/Shared/_PartialView1.cshtml")*@
                    </div>
                    
                }
            </div>

        </div>
    </div>
</div>

