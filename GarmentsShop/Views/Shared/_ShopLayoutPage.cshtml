@using GarmentsShop.Models
@using GarmentsShop.Models.ShoppingCart

@{
    List<MenuModel> menuItems = (List<MenuModel>)HttpContext.Current.Application[WebUIHelper.MENU_ITEMS];
    Cart cart = Session[WebUIHelper.CART] as Cart;
}
<!DOCTYPE html>
<html>
<head>
    <meta lang="en-us" charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    @RenderSection("mystyles", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainmenue" aria-expanded="false">
                    <span class="glyphicon glyphicon-circle-arrow-down"></span>
                </button>
                <a class="navbar-brand" href="/Home/index"><span class="glyphicon glyphicon-leaf"></span> GarmentsShop</a>
            </div>

            <div class="collapse navbar-collapse" id="mainmenue">
                <ul class="nav navbar-nav">
                    @foreach (var item in menuItems)
                    {
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-tags"></span>&nbsp; @item.DepartmentName <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @foreach (var c in item.Categories)
                                {
                                    <li><a href="/products/bycategory/@c.Id"><span class="glyphicon glyphicon-tags"></span>&nbsp; @c.Name</a></li>
                                }
                            </ul>
                        </li>
                    }

                    <li>
                        <a href="/cart/details">
                            <span class="glyphicon glyphicon-shopping-cart"></span>
                            Cart
                            @if (cart != null && cart.NumberOfItems > 0)
                            {
                                <span class="badge">@cart.NumberOfItems</span>
                            }
                        </a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="Images/others/osama.jpg" alt="user" class="img-circle userIcon" />  Osama Rafeeq
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div style="padding:15px">
                                    <img src="Images/others/osama.jpg" alt="user" />
                                </div>
                            </li>
                            <li class="divider"></li>
                            <li><a href="#"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-lock"></span> Change Password</a></li>
                            <li class="divider"></li>
                            <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>





